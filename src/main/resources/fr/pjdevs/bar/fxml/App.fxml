<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import fr.pjdevs.bar.*?>

<TabPane styleClass="big" tabClosingPolicy="UNAVAILABLE">
   <tabs>
      <Tab closable="false" text="Paiement">
         <content>
            <HBox>
               <children>
                  <ItemPane HBox.hgrow="ALWAYS"/>
                  <CartPane HBox.hgrow="ALWAYS"/>
               </children>
            </HBox>
         </content>
      </Tab>
      <UpdateTab closable="false" text="Comptes">
         <content>
            <AccountPane/>
         </content>
      </UpdateTab>
      <UpdateTab closable="false" text="Historique">
         <content>
            <HistoryPane/>
         </content>
      </UpdateTab>
   </tabs>
</TabPane>