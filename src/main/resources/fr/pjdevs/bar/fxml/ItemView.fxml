<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>
<?import javafx.scene.image.* ?>

<fx:root styleClass="item-view" type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" prefWidth="200" prefHeight="200" alignment="CENTER" spacing="10" onMouseClicked="#addToCart">
   <Label fx:id="itemNameLbl" text="Item name" wrapText="true"/>
   <Label fx:id="itemPriceLbl" text="Item price" wrapText="true"/>
   <Label fx:id="itemDescriptionLbl" text="Item description" wrapText="true"/>
   <Button fx:id="editBtn" text="Edit" onAction="#edit"/>
</fx:root>