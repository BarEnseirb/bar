<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16">
    <children>
        <HBox spacing="10">
            <children>
                <Button styleClass="warning" text="Go Next Year" onAction="#nextYear" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            </children>
        </HBox>
        <TextField fx:id="nameFilterField" promptText="Filter by name or login"/>
        <TableView fx:id="accountTable" VBox.vgrow="ALWAYS" maxHeight="Infinity"/>
        <HBox spacing="10">
            <children>
                <TextField fx:id="loginField" promptText="Login"  HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <TextField fx:id="nameField" promptText="Name"  HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <TextField fx:id="yearField" promptText="Year"  HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <TextField fx:id="sectorField" promptText="Sector"  HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                <Button text="Add" onAction="#addAccount"/>
                <Button text="Remove" onAction="#removeAccount"/>
            </children>
        </HBox>
    </children>
</fx:root>
